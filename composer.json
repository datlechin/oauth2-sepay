{
    "name": "datlechin/oauth2-sepay",
    "description": "SePay OAuth 2.0 Client Provider for The PHP League OAuth2-Client",
    "license": "MIT",
    "authors": [
        {
            "name": "Ngo Quoc Dat",
            "email": "hi@ngoquocdat.dev",
            "homepage": "https://ngoquocdat.dev"
        }
    ],
    "keywords": [
        "oauth",
        "oauth2",
        "client",
        "authorization",
        "authentication",
        "sepay"
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "league/oauth2-client": "^2.8"
    },
    "require-dev": {
        "ext-json": "*",
        "squizlabs/php_codesniffer": "^3.11",
        "mockery/mockery": "^1.6",
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "Datlechin\\OAuth2\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Datlechin\\OAuth2\\Client\\Test\\": "tests/src/"
        }
    },
    "scripts": {
        "check": [
            "phpcs --standard=PSR12 src test -sp"
        ]
    }
}
